{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "qsl-cardhub",
  "version": "0.4.0",
  "identifier": "com.herbertgao.qsl-cardhub",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "web/dist",
    "beforeDevCommand": {
      "script": "npm run dev",
      "cwd": "web/"
    },
    "beforeBuildCommand": {
      "script": "npm run build",
      "cwd": "web/"
    }
  },
  "app": {
    "windows": [
      {
        "title": "qsl-cardhub",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "nsis", "msi"],
    "createUpdaterArtifacts": true,
    "icon": [
      "assets/icons/32x32.png",
      "assets/icons/128x128.png",
      "assets/icons/128x128@2x.png",
      "assets/icons/icon.icns",
      "assets/icons/icon.ico"
    ],
    "publisher": "Herbert Software",
    "copyright": "Copyright © 2026 Herbert Software. All rights reserved.",
    "category": "Utility",
    "shortDescription": "QSL 卡片打印工具",
    "longDescription": "QSL CardHub 是一个专业的 QSL 卡片设计和打印工具，支持自定义模板、批量打印和多种导出格式。",
    "resources": [
      "config/templates/*",
      "resources/pdfium/**/*"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "assets/icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "currentUser",
        "languages": ["SimpChinese", "English"],
        "displayLanguageSelector": false,
        "installerHooks": "./hooks.nsi"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU1MjlFMEVCNzg5RTI4RDIKUldUU0tKNTQ2K0FwVmVoMXE4dmNNUnczKzgxOGpTR2pLUXFFczFWU1pRckVLUTJpYWhTYTlPWWIK",
      "endpoints": [
        "https://github.com/HerbertGao/QSL-CardHub/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
