{
  "name": "qsl-web-query-service",
  "version": "0.7.0",
  "description": "QSL CardHub 云端同步、按呼号查询与顺丰/微信推送接收服务",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:worker\" \"pnpm run dev:client\"",
    "dev:worker": "wrangler dev",
    "dev:client": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "deploy": "pnpm run build && wrangler deploy",
    "db:create": "wrangler d1 create qsl-sync",
    "db:migrate": "wrangler d1 execute qsl-sync --remote --file=./schema.sql",
    "db:migrate:local": "wrangler d1 execute qsl-sync --local --file=./schema.sql"
  },
  "dependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.4",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vue-tsc": "^3.2.4",
    "wrangler": "^4.68.0"
  }
}
